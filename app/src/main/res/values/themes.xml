<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyGithub" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MyGithub.Main" parent="Theme.MyGithub">
        <item name="android:windowBackground">@color/primary_variant</item>
    </style>

    <style name="Theme.MyGithub.Splash" parent="Theme.MyGithub">
        <item name="android:windowBackground">@drawable/splash_bg</item>
        <item name="background">@color/on_primary</item>
        <item name="android:windowFullscreen">true</item>
    </style>
</resources>